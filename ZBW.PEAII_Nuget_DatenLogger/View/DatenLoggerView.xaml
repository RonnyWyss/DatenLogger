<UserControl x:Class="ZBW.PEAII_Nuget_DatenLogger.View.DatenLoggerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ZBW.PEAII_Nuget_DatenLogger.View"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="50" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="80" />
            <RowDefinition Height="100" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Label Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="4" VerticalAlignment="Bottom">Servername:</Label>
        <TextBox Grid.Column="1" Grid.Row="2" BorderThickness="2" VerticalAlignment="Center" ToolTip="Datenbankserver eingeben /Default: localhost" Text="{Binding Servername}"></TextBox>
        <Label Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="4">Datenbase:</Label>
        <TextBox Grid.Column="3" Grid.Row="2" BorderThickness="2" VerticalAlignment="Center" ToolTip="Datenbankname eingeben /Default: sqltecherdb" Text="{Binding Database}"></TextBox>
        <Label Grid.Column="5" Grid.Row="1" Grid.ColumnSpan="4">User Id:</Label>
        <TextBox Grid.Column="5" Grid.Row="2" BorderThickness="2" VerticalAlignment="Center" ToolTip="Benutzername eingeben /Default: root" Text="{Binding Username}"></TextBox>
        <Label Grid.Column="7" Grid.Row="1" Grid.ColumnSpan="4">Password:</Label>
        <TextBox Grid.Column="7" Grid.Row="2" BorderThickness="2" VerticalAlignment="Center" ToolTip="Passwort eingeben /Default: root" Text="{Binding Passwort}"></TextBox>
        <Button Grid.Column="9" Grid.Row="2" ToolTip="Datenbank laden" Command="{Binding CmdLoad}">Load</Button>
        <Button Grid.Column="9" Grid.Row="4" ToolTip="Datensatz bestätigen" Command="{Binding CmdConfirm}">Confirm</Button>
        <Button Grid.Column="9" Grid.Row="6" ToolTip="Datensätze laden" Command="{Binding CmdAddLog}">Add</Button>

        <ListView
            Name="LogEntriesGrid"
            Grid.Row="4"
            Grid.Column="1"
            Grid.ColumnSpan="7"
            Grid.RowSpan="5"
            HorizontalContentAlignment="Stretch"
            IsSynchronizedWithCurrentItem="True"
            ItemsSource="{Binding LogEntries}"
            SelectedIndex="0"
            SelectedItem="{Binding SelectedLogEntry, Mode=TwoWay}">
            <ListView.View>
                <GridView x:Name="logEntryGrid">
                    <GridViewColumn
                        Width="20"
                        DisplayMemberBinding="{Binding Id}"
                        Header="Id" />
                    <GridViewColumn
                        Width="100"
                        DisplayMemberBinding="{Binding Hostname}"
                        Header="Hostname" />
                    <GridViewColumn
                        Width="100"
                        DisplayMemberBinding="{Binding Pod}"
                        Header="Pod" />
                    <GridViewColumn
                        Width="100"
                        DisplayMemberBinding="{Binding Location}"
                        Header="Location" />
                    <GridViewColumn
                        Width="100"
                        DisplayMemberBinding="{Binding Severity}"
                        Header="Severity" />
                    <GridViewColumn
                        Width="100"
                        DisplayMemberBinding="{Binding Message}"
                        Header="Message" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>